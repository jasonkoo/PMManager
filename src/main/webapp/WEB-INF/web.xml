<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>PMManager</display-name>
   <servlet>
    <servlet-name>addHitConfiguration</servlet-name>
    <servlet-class>com.lenovo.lps.push.marketing.manager.servlets.AddHitConfigServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addHitConfiguration</servlet-name>
    <url-pattern>/addHitConfig</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>viewHitConfiguration</servlet-name>
    <servlet-class>com.lenovo.lps.push.marketing.manager.servlets.ViewHitConfigServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>viewHitConfiguration</servlet-name>
    <url-pattern>/viewHitConfig</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>updateHitConfiguration</servlet-name>
    <servlet-class>com.lenovo.lps.push.marketing.manager.servlets.UpdateHitConfigServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>updateHitConfiguration</servlet-name>
    <url-pattern>/updateHitConfig</url-pattern>
  </servlet-mapping>
</web-app>
